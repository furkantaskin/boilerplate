{
  "name": "mufferplate",
  "description": "Personal template for projects",
  "version": "1.0.0",
  "author": "Furkan Taşkın",
  "license": "MIT",
  "private": true,
  "type": "module",
  "dependencies": {
    "blaze-slider": "^1.9.3",
    "photoswipe": "^5.4.3",
    "swiper": "^11.0.5",
    "glightbox": "^3.2.0",
    "bootstrap": "5.3.2"
  },
  "devDependencies": {
    "@thedutchcoder/postcss-rem-to-px": "^0.0.2",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cssnano": "^6.0.3",
    "mufferplate": "^0.20.0",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.0.0",
    "sass": "^1.69.7",
    "tailwindcss": "^3.4.1"
  },
  "scripts": {
    "dev-js": "mufferplate dev",
    "dev-css": "postcss src/css/app.css --output theme/assets/css/app.css --watch --verbose --env development",
    "dev-sass": "sass --color --watch --embed-source-map src/css/main.scss:src/css/libs.css --load-path=src/css",
    "build-js": "mufferplate build",
    "build-css": "postcss src/css/app.css --output theme/assets/css/app.css --verbose --env production",
    "build-sass": "sass --no-source-map --style=compressed src/css/main.scss:src/css/libs.css",
    "build": "pnpm run build-js && pnpm run build-sass && pnpm run build-css",
    "dev": "concurrently -c \"bgYellow.bold,bgMagenta.bold\" --kill-others npm:dev-*",
    "bundle": "npm run build && node bundlephp.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/furkantaskin/mufferplate.git"
  },
  "bugs": {
    "url": "https://github.com/furkantaskin/mufferplate/issues"
  },
  "homepage": "https://github.com/furkantaskin/mufferplate#readme",
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "singleQuote": true,
    "bracketSameLine": true,
    "printWidth": 70
  },
  "browserslist": [
    ">= 0.5%",
    "last 2 major versions",
    "not dead",
    "Chrome >= 60",
    "Firefox >= 60",
    "Firefox ESR",
    "iOS >= 12",
    "Safari >= 12",
    "not Explorer <= 11"
  ]
}
