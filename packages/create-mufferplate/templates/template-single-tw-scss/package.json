{
  "name": "mufferplate",
  "description": "Personal template for projects",
  "version": "1.0.0",
  "author": "Furkan Taşkın",
  "license": "MIT",
  "private": true,
  "type": "module",
  "dependencies": {
    "blaze-slider": "^1.9.3",
    "photoswipe": "^5.4.3",
    "swiper": "^11.0.5",
    "glightbox": "^3.2.0",
    "bootstrap": "5.3.2"
  },
  "devDependencies": {
    "mufferplate":"^1.1.0"
  },
  "scripts": {
    "dev-main-js": "mufferplate dev",
    "dev-main-css": "postcss src/css/app.css --output theme/assets/css/app.css --watch --verbose --env development",
    "dev-sub-css": "sass --color --watch --embed-source-map src/css/main.scss:src/css/libs.css --load-path=src/css",
    "build-js": "mufferplate build",
    "build-css": "postcss src/css/app.css --output theme/assets/css/app.css --verbose --env production",
    "build-sass": "sass --no-source-map --style=compressed src/css/main.scss:src/css/libs.css",
    "build": "pnpm run build-js && pnpm run build-sass && pnpm run build-css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/furkantaskin/mufferplate.git"
  },
  "bugs": {
    "url": "https://github.com/furkantaskin/mufferplate/issues"
  },
  "homepage": "https://github.com/furkantaskin/mufferplate#readme",
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "singleQuote": true,
    "bracketSameLine": true,
    "printWidth": 70
  },
  "browserslist": [
    ">= 0.5%",
    "last 2 major versions",
    "not dead",
    "Chrome >= 60",
    "Firefox >= 60",
    "Firefox ESR",
    "iOS >= 12",
    "Safari >= 12",
    "not Explorer <= 11"
  ]
}
