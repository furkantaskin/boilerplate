{
  "name": "mufferplate",
  "description": "Personal template for projects",
  "version": "1.0.0",
  "author": "Furkan Taşkın",
  "license": "MIT",
  "private": true,
  "type": "module",
  "dependencies": {
    "blaze-slider": "^1.9.3",
    "photoswipe": "^5.3.7",
    "swiper": "^9.2.4"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "cssnano": "^6.0.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.18",
    "eslint": "^8.39.0",
    "fs-extra": "^11.1.1",
    "pers-sign": "^0.4.3",
    "postcss": "^8.4.27",
    "postcss-cli": "^10.1.0",
    "sass": "^1.62.1",
    "tailwindcss": "^3.3.3"
  },
  "scripts": {
    "esbuild": "node mufferplate.js",
    "tw": "postcss src/css/app.css --output theme/assets/css/style.css --watch --verbose --env development",
    "dev": "concurrently --names \"Tailwind,esbuild\" -c \"bgCyan.bold,bgYellow.bold\" --kill-others \"npm run tw\" \"node mufferplate.js development\"",
    "build": "postcss src/css/app.css --output theme/assets/css/style.css --verbose --env production && node mufferplate.js production",
    "bundle": "npm run build && node bundlephp.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/furkantaskin/mufferplate.git"
  },
  "bugs": {
    "url": "https://github.com/furkantaskin/mufferplate/issues"
  },
  "homepage": "https://github.com/furkantaskin/mufferplate#readme",
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "singleQuote": true,
    "bracketSameLine": true,
    "printWidth": 70
  },
  "browserslist": [
    ">= 0.5%",
    "last 2 major versions",
    "not dead",
    "Chrome >= 60",
    "Firefox >= 60",
    "Firefox ESR",
    "iOS >= 12",
    "Safari >= 12",
    "not Explorer <= 11"
  ]
}
