{
  "name": "boilerplate",
  "description": "Personal template for projects",
  "version": "1.0.0",
  "author": "Furkan Taşkın",
  "license": "MIT",
  "private": true,
  "type": "module",
  "dependencies": {
    "bootstrap": "^5.3.0-alpha1",
    "photoswipe": "^5.3.7",
    "swiper": "^9.2.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "cssnano": "^6.0.0",
    "dotenv": "^16.0.3",
    "esbuild": "0.17.15",
    "eslint": "^8.37.0",
    "pers-sign": "^0.4.3",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "sass": "^1.60.0"
  },
  "scripts": {
    "esbuild": "node esbuild-config.js",
    "sass": "sass --color --watch --embed-source-map src/css/pages:theme/assets/css --load-path=src/css",
    "bundlecss": "sass --no-source-map --style=compressed src/css/pages:theme/assets/css && postcss --no-map theme/assets/css/*.css --dir theme/assets/css --config postcss.config.js",
    "dev": "concurrently --kill-others \"npm run sass\" \"node esbuild-config.js development\"",
    "build": "sass --no-source-map --style=compressed src/css/pages:theme/assets/css && node esbuild-config.js production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/furkantaskin/boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/furkantaskin/boilerplate/issues"
  },
  "homepage": "https://github.com/furkantaskin/boilerplate#readme",
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "singleQuote": true,
    "bracketSameLine": true,
    "printWidth": 70
  }
}
